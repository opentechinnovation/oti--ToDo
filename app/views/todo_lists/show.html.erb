
<div class="page-header">
    <h1><%= @todo_list.title %></h1>
</div>


<h2><%= @todo_list.description %></h2>

<% if @todo_list.has_incomplete_items? %>
    <h3 class="label label-danger">Incomplete Items:</h3>
    <ul>
      <% @todo_list.todo_items.incomplete.each do |todo_item| %>
          <li><%= todo_item.content %></li>
      <% end %>
    </ul>
<% end %>

<% if @todo_list.has_completed_items? %>
    <h3 class="label label-success">Complete Items:</h3>
    <ul>
      <% @todo_list.todo_items.complete.each do |todo_item| %>
          <li><%= todo_item.content %></li>
      <% end %>
    </ul>
<% end %>

<div class="btn-group">
    <button type="button" class="btn btn-default"><%= link_to 'Edit', edit_todo_list_path(@todo_list) %></button>
    <button type="button" class="btn btn-default"><%= link_to 'Back', todo_lists_path %></button>
</div>


